<!-- This is the Edit template, this will be rendered when when anybody wants to edit an already added listing. -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Listing</title>
  </head>
  <body>
    <h4>Edit Your Listing</h4>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
      <!-- We can only send a GET or a POST request via forms, but we can send other requests like PUT, PATCH and DELETE by using a package
        known as method-override -->
      <input name="listing[title]" value="<%=listing.title%>" type="text" />
      <br />
      <br />
      <textarea name="listing[description]"><%=listing.description%></textarea>
      <br />
      <br />
      <input name="listing[image]" value="<%=listing.image%>" type="text" />
      <br />
      <br />
      <input name="listing[price]" value="<%=listing.price%>" type="number" />
      <br />
      <br />
      <input
        name="listing[location]"
        value="<%=listing.location%>"
        type="text"
      />
      <br />
      <br />
      <input name="listing[country]" value="<%=listing.country%>" type="text" />
      <br />
      <br />
      <button>Edit</button>
    </form>
  </body>
</html>
