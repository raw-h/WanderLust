<!-- This is the form that will be rendered whenever a new listing is to be listed on our site. -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderLust: Add Listing</title>
  </head>
  <body>
    <h4>Create A New Listing</h4>
    <form method="POST" action="/listings">
      <input name="listing[title]" placeholder="Enter Title" type="text" />
      <br />
      <br />
      <textarea
        name="listing[description]"
        placeholder="Enter Description"
        type="text"
      ></textarea>
      <br />
      <br />
      <input
        name="listing[image]"
        placeholder="Enter Image URL/Link"
        type="text"
      />
      <br />
      <br />
      <input name="listing[price]" placeholder="Enter Price" type="number" />
      <br />
      <br />
      <input
        name="listing[location]"
        placeholder="Enter Location"
        type="text"
      />
      <br />
      <br />
      <input name="listing[country]" placeholder="Enter Country" type="text" />
      <br />
      <br />
      <button>Add</button>
    </form>
  </body>
</html>

<!-- We created each field as a key to the listing object, and the values to those key will be the values that are entered by the user.
 This is done so that data extraction after form submission is easier. -->
